{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Availability</th>
                <td>{{ course.availability ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
